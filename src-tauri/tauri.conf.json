{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "clock_app",
  "version": "0.1.0",
  "identifier": "com.github.fumim74.clockapp",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:1420",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Clock_App",
        "width": 70,
        "height": 120,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "fs"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "windows": {
      "allowDowngrades": true,
      "nsis": {
        "installMode": "currentUser",
        "startMenuFolder": "clock_app",
        "installerHooks": "./nsis/installer-hooks.nsh"
      }
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
